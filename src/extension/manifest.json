{
  "manifest_version": 2,
  "name": "PR review status",
  "permissions": [
    "https://github.com/*/*/pulls",
    "webNavigation",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup/index.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pulls"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
