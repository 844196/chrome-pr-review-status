{
  "manifest_version": 2,
  "name": "PR review status",
  "version": "0.0.2",
  "permissions": [
    "https://github.com/*/*/pulls",
    "webNavigation",
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*/pulls"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}
