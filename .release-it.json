{
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "commit": false,
    "tag": false,
    "push": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "assets": ["tmp_release/*.zip"],
    "tokenRef": "GITHUB_TOKEN"
  },
  "scripts": {
    "afterBump": "yarn build",
    "beforeStage": "yarn cross-env NAME=${name}-${version} yarn zip && yarn shx mkdir -p tmp_release && yarn shx mv ${name}-${version}.zip tmp_release/",
    "afterRelease": "yarn shx rm -rf tmp_release"
  }
}
