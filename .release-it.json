{
  "git": {
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "commit": false,
    "tag": false,
    "push": false
  },
  "npm": {
    "publish": false
  },
  "github": {
    "release": true,
    "releaseName": "${version}",
    "assets": ["*.zip"],
    "tokenRef": "GITHUB_TOKEN"
  },
  "scripts": {
    "beforeStage": "yarn build && yarn cpx \"dist/**/*\" ${name}-${version} && yarn bestzip ${name}-${version}.zip ${name}-${version}/*"
  }
}
